{
    "name": "@simonverhoeven/local-test-server",
    "version": "2.0.0",
    "description": "Lambda function generated by Amplify",
    "main": "dist/index.js",
    "license": "Apache-2.0",
    "scripts": {
        "start": "cd local-dynamodb/libs && java -Djava.library.path=./DynamoDBLocal_lib -jar DynamoDBLocal.jar -sharedDb --inMemory",
        "start:inline": "ts-node src/start-test-db.ts",
        "force:stop": "lsof -ti tcp:8000 | xargs kill",
        "start:new": "npm-run-all --parallel start watch:tables",
        "watch:tables": "nodemon",
        "create:tables": "ts-node src/index.ts"
    },
    "dependencies": {},
    "devDependencies": {
        "npm-run-all": "^4.1.5"
    }
}
